<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article) %>
    <%= link_to article_path(article), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    <%= link_to article_path(article),
              method: :delete,
              data: { confirm: "Are you sure ?" } do %>
              <i class='fas fa-trash-alt'></i>
              <% end %>
  </li>
  <% end %>
</ul>
